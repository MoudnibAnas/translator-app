{
    "manifest_version": 3,
    "name": "Tarjmaan Translator",
    "version": "1.0.0",
    "description": "English to Moroccan Darija AI Translator",
    "permissions": [
      "sidePanel",
      "storage",
      "contextMenus"
    ],
    "host_permissions": [
      "http://localhost:3000/*",
      "http://localhost:8080/*"
    ],
    "background": {
      "service_worker": "background.js",
      "type": "module"
    },
    "side_panel": {
      "default_path": "sidepanel.html"
    },
    "action": {
      "default_title": "Open Tarjmaan Translator"
    },
    "icons": {
      "16": "icons/icon16.png"
    }
  }